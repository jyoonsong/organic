    <!--div>
    You've answered 
    <strong><%= Answer.answers_by(current_user.id).length %></strong>
    questions!
    </div-->

    <div class="scorebox">
    Credibility Score: <strong class="red"><%=@task.credibility_score(current_user) %></strong> points <br>
    Your answer can increase/decrease the score by <strong class="red"><%=@task.potential_credibility_score(current_user) %></strong> pts at max. <br><br>
    </div>

    <li class="<%= @task.kind %>">
        <div class="collapsible-header noclick">
            <b><%= @task.question %></b>
            <!-- <i class="material-icons">keyboard_arrow_down</i> -->
        </div>
        <div id="task-<%= @task.id %>" class="collapsible-body">
            <% answer = Answer.find_by(user_id: current_user.id, task_id: @task.id) %>
            <% if (answer.nil?) %>
                <div id="formContainer">
                    <%= render partial: "articles/partials/form" %>
                </div>
                <div id="highlightContainer" class="hidden"></div>
            <% else %>
                <div id="formContainer">
                    <%= render partial: "articles/partials/edit_form", locals: {answer: answer} %>
                </div>

                <div id="highlightContainer">
                <% answer.value_array.each_with_index do |v, i| %>
                    <% if !@task.highlights_arr.include?(v) %>
                        <div class="highlightContainer">
                            <%= render partial: "articles/partials/annotate", locals: {answer: answer, index: i + 1} %>
                        </div>
                    <% end %>
                <% end %>
                </div>

            <% end %>
        </div>
    </li>
