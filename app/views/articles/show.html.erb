
<section class="container">
    <div class="article">
        <h1 class="title">
            <%= @article.title %>
        </h1>
        <h4>16 Jun 2017, 19:20 | <%= @article.metadata %> | <%= @article.topic %></h4>

        <%= @article.content.html_safe %>
    </div>
</section>

<section class="sidebar">
    <!-- <div class="contribution">
        Your contribution:
        <div class="progress">
            <div style="width: 10%" class="progress-bar"></div>
        </div> 
    </div> -->

    <div class="task">
          <ul class="collapsible">
            <% @tasks.each do |t| %>
            <li>
                <div class="collapsible-header">
                    <b>Does the title of the article accurately reflect the content of the article?</b>
                    <i class="material-icons">keyboard_arrow_down</i>
                </div>
                <div class="collapsible-body">

                <% if t.kind == "option" %>
                    <div class="options">
                        <% t.options.split(/\s*,\s*/).each do |o| %>
                            <label><input type='radio' name='answer_value' value='<%= o %>' /><%= o %></label>
                        <% end %>
                    </div>
                    <div class="action">
                        <button>Submit</button>
                    </div>

                <% elsif t.kind == "highlight" %>
                    <div>Please highlight it.</div>
                    <div class="action">
                        <button class="startHighlight">Start</button>
                    </div>

                <% elsif t.kind == "verify" %>

                <% end %>

                </div>
            </li>
            <% end %>
        </ul>
 
    </div>
</section>

