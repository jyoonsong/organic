    <div class="task mb-1 col-12">
        <ul class="collapsible survey">

            <% Surveytask.all.last(6).each do |t| %>
                <% if t.surveyanswers.where(user_id: current_user.id).length == 0 %>

                    <li class="done">
                        <div class="collapsible-header">
                            <%= t.id %>. &nbsp;<b><%= t.question %></b>
                            <i class="material-icons">keyboard_arrow_down</i>
                        </div>
                        <div id="task-<%= t.id %>" class="collapsible-body">
                            <%= render partial: "survey_form", locals: {task: t} %>
                        </div>
                    </li>

                <% end %>
            <% end %>

        </ul>

    </div>
</section>