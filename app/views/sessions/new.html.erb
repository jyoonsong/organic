<div class="full-height flex-column center col-12">
    <h1>Welcome!</h1>

    <%= form_tag sessions_path do %>

    <p>
        <%= label_tag :name, "Your username is" %> &nbsp;
        <%= text_field_tag :name, "write your username" %>
    </p>
    <p>
        <%= hidden_field_tag :key, params[:workerId] %>
    </p>
    
    <p class="center"><%= submit_tag "Start Task", :class => "btn mt-1 mb-1" %></p>

    <% end %>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
    document.getElementById("name").value = faker.name.firstName();
});
</script>